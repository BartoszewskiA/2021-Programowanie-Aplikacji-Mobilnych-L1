<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/st_tytul"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:background="@color/pasek_tytulowy"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="@dimen/rf_duzy"
        />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a:"
        android:textSize="@dimen/rf_normalny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView01"
        android:layout_marginLeft="@dimen/margines_lewy"
        android:layout_marginTop="@dimen/margines_gorny"/>
    <TextView
        android:id="@+id/textView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b:"
        android:textSize="@dimen/rf_normalny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView02"
        android:layout_marginLeft="@dimen/margines_lewy"
        android:layout_marginTop="@dimen/margines_gorny"/>
    <TextView
        android:id="@+id/textView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c:"
        android:textSize="@dimen/rf_normalny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView03"
        android:layout_marginLeft="@dimen/margines_lewy"
        android:layout_marginTop="@dimen/margines_gorny"/>

    <EditText
        android:id="@+id/editText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintBaseline_toBaselineOf="@id/textView02"
        app:layout_constraintLeft_toRightOf="@id/textView02"
        android:textSize="@dimen/rf_normalny"
        />
    <EditText
        android:id="@+id/editText02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintBaseline_toBaselineOf="@id/textView03"
        app:layout_constraintLeft_toRightOf="@id/textView03"
        android:textSize="@dimen/rf_normalny"
        />
    <EditText
        android:id="@+id/editText03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintBaseline_toBaselineOf="@id/textView04"
        app:layout_constraintLeft_toRightOf="@id/textView04"
        android:textSize="@dimen/rf_normalny"
        />
    <Button
        android:id="@+id/button01"
        android:text="@string/bt_oblicz"
        android:textSize="@dimen/rf_duzy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="obliczenie"
        />

    <TextView
        android:id="@+id/textViewWynik"
        android:text="@string/opis_pole_wyniku"
        android:textSize="@dimen/rf_normalny"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/editText03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button01"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>